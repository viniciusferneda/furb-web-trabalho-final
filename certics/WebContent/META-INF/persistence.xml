<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	
	<persistence-unit name="CerticsDS">
	
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>br.certics.model.entity.AreaCompetenciaEntity</class>
		<class>br.certics.model.entity.AvaliacaoEntity</class>
		<class>br.certics.model.entity.OrganizacaoSolicitanteEntity</class>
		<class>br.certics.model.entity.PerguntaRespostaEntity</class>
		<class>br.certics.model.entity.PessoaFisicaEntity</class>
		<class>br.certics.model.entity.ResultadoEsperadoEntity</class>
		<class>br.certics.model.entity.SoftwareEntity</class>
		<class>br.certics.model.entity.UsuarioEntity</class>
		
		<properties>  
            <!-- DADOS CONEXAO -->  
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />  
            <property name="hibernate.connection.username" value="root" />  
            <property name="hibernate.connection.password" value="root" />  
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/certics" />  
            <property name="hibernate.default_schema" value="certics"/>  
          
            <!-- CONFIGURACAO -->  
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />  
            <property name="hibernate.hbm2ddl.auto" value="update" />  
            <property name="hibernate.show_sql" value="true" />  
            <property name="hibernate.format_sql" value="true" />  
            <property name="hibernate.archive.autodetection" value="class" />  
              
            <!-- POOL -->  
            <property name="hibernate.c3p0.min_size" value="5"/>  
            <property name="hibernate.c3p0.max_size" value="20"/>  
            <property name="hibernate.c3p0.timeout" value="300"/>  
            <property name="hibernate.c3p0.max_statements" value="50"/>  
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>  
        </properties>
        
